package servercon.servercon;
import java.util.concurrent.atomic.AtomicLong;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class CountryController {
	String[] strings = new String[] {"Абхазия-Сухум-8600-243564-Азия" , "Австралия-Канберра-7686850-24238610-Австралия и Океания", "Австрия-Вена-83858-8741753-Европа","Азербайджан-Баку-86600-9705600-Азия", "Албания-Тирана-28748-2866026-Европа", "Алжир-Алжир-2381740-39813722-Африка", "Ангола-Луанда-1246700-25831000-Африка", "Андорра-Андорра ла Велья-468-78014-Европа", "Антигуа и Барбуда-Сент Джонс-442-93581-Северная Америка", "Аргентина-Буэнос Айрес-2766890-43847000-Южная Америка"};
	private Country[] countries =new Country[10];
	  private static final String template = "Country, %s!";
	    private final AtomicLong counter = new AtomicLong();

	    @RequestMapping("/country")
	    public Country[] countries(@RequestParam(value="name", defaultValue="World") String name) {
	    	for(int i =0;i<10;i++) {
	    		Country country = new Country(String.format(template,strings[i]));
	    		countries[i]=country;
	    	}
	        return countries;
	    }
}
